<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo" class="page">
    <!--
    The ActionBar is the NativeScript common abstraction over the Android ActionBar and iOS NavigationBar.
    http://docs.nativescript.org/ui/action-bar
    -->
    <Page.actionBar>
        <ActionBar title="Car Rental" icon="" class="action-bar">
        </ActionBar>
    </Page.actionBar>

    <GridLayout>
        <ListView items="{{ cars }}" itemTap="onCarItemTap">
            <ListView.itemTemplate>
                <GridLayout columns="*, *, *" rows="*,*,*,*">
                    <Image src="{{ imageUrl }}" stretch="aspectFill" col="0" rowSpan="4"/>
                    <Label text="{{ name }}" col="1" colSpan="2" row="0"/>

                    <Label row="1" col="1" text="Class" horizontalAlignemt="left"/>
                    <Label row="1" col="2" text="{{ class }}" horizontalAlignemt="right"/>

                    <Label row="2" col="1" text="Transmission" horizontalAlignemt="left"/>
                    <Label row="2" col="2" text="{{ transmission }}" horizontalAlignemt="right"/>

                    <Label row="3" col="1" colSpan="2">
                        <FormattedString>
                            <Span text="€" fontAttributes="Bold"></Span>
                            <Span text="{{ price }}" fontAttributes="Bold"></Span>
                            <Span text="/day" fontAttributes="Bold"></Span>
                        </FormattedString>
                    </Label>
                </GridLayout>
            </ListView.itemTemplate>

